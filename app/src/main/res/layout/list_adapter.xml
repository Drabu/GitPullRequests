<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
            android:background="?selectableItemBackground"
            android:paddingTop="15sp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <LinearLayout
                android:paddingRight="20sp"
                android:paddingLeft="20sp"
                android:id="@+id/userDetailsContainerLL"
                android:minHeight="50dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/authorAvatarCIV"
                    android:layout_marginEnd="15dp"
                    android:minWidth="35dp"
                    android:minHeight="35dp"
                    android:src="@drawable/placeholder"
                    android:layout_width="35dp"
                    android:layout_height="35dp" android:layout_marginRight="15dp"/>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:textSize="12sp"
                        android:textColor="@color/titleTextColor"
                        android:text="@string/sample_title_text"
                        android:id="@+id/repTitleTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                <TextView
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="3dp"
                        android:textColor="#4D4D4D"
                        android:text="@string/sample_subtitle_text"
                        android:textSize="15sp"
                        android:id="@+id/repSubTitleTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>



            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>
